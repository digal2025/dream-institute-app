{
  "name": "zoho-invoice-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "jest --testPathPattern=tests/backend",
    "test:frontend": "cd client && npm test -- --watchAll=false",
    "test:frontend:coverage": "cd client && npm test -- --coverage --watchAll=false",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@fontsource/montserrat": "^5.2.6",
    "@sendgrid/mail": "^8.1.5",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "faker": "^6.6.6",
    "helmet": "^8.1.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.1",
    "path-to-regexp": "^6.3.0",
    "twilio": "^5.7.3",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "supertest": "^6.3.3",
    "tailwindcss": "^4.1.11"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "services/**/*.js",
      "backend/**/*.js",
      "index.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 10000
  }
}
